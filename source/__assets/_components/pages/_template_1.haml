- content_for :head do
  :css
    @media (max-width: 400px) {
      #topcell {
        padding-right: 20px !important;
      }
      #maincell {
        padding-left:  20px !important;
        padding-right: 20px !important;
      }
    }
    
- content_for :foot do
  = javascript_include_tag 'jquery/dist/jquery.min.js'
  = javascript_include_tag 'liquid.js/dist/liquid.min.js'
  
  :coffee
    result =
      Liquid
        .parse $('#liquid_body')[0].innerHTML
        .render #{options[:content].to_json}
    
    $ 'body'
      .append $(result)

        


%script#liquid_body{type: 'text/liquid'}
  = component 'pages/template_1_content'